/**index.wxss**/

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.home {
    padding: 0 10px;
}

.searchBox {
    width: 100%;
    padding: 8px;
    border: 1px solid #ccc;
    box-sizing: border-box;
    border-radius: 40px;
    padding-left: 20px;
}

.flex-wrp {
    display: flex;
}

.flex-item {
    flex: 1;
    padding: 4px;
}

.flex_box {
    border-radius: 10px;
    height: 60px;
    text-align: center;
    line-height: 60px;
    margin-top: 8px;
    margin-bottom: 8px;
    overflow: hidden;
    position: relative;
}

.bg_female,
.bg_male,
.bg_picture,
.bg_press {
    position: relative;
}

.flex_title {
    position: absolute;
    left: 50%;
    margin-left: -14px;
    color: #fff;
}

.bookList {
    border: 1px solid #eaeaea;
    padding: 6px;
    border-radius: 6px;
    overflow: hidden;
}

.bookTypeBox {
    width: 50%;
    float: left;
    overflow: hidden;
    padding: 8px;
    box-sizing: border-box;
}

.book_img {
    height: 180px;
    overflow: hidden;
}

.bookTypeContent {
    background: #fff;
    border: 1px solid #eaeaea;
    position: relative;
    border-radius: 8px;
    overflow: hidden;
}

.bookTypeBoxName {
    position: absolute;
    padding: 4px 10px;
    left: 0;
    bottom: 0;
    width: 100%;
    color: #666;
    border-top: 1px solid #eaeaea;
    box-sizing: border-box;
}

.bookTypeBoxNameHide {
    opacity: 0;
}

.bookTypeBoxNameBackground {
    position: absolute;
    padding: 4px 10px;
    width: 100%;
    left: 0;
    bottom: 0;
    background: #e4e4e4;
    opacity: 0.9;
    box-sizing: border-box;
}

.mask {
    height: 100%;
    width: 100%;
    opacity: 0.5;
    background: #fff;
    position: absolute;
    left: 0;
    top: 0;
}

.maskActive {
    opacity: 0;
    filter: blur(0px);
}